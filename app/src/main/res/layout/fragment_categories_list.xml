<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Food"
            android:id="@+id/food"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:background="#2d4152"
            android:layout_weight="1"
            android:drawableLeft="@drawable/food"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Social"
            android:id="@+id/social"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:background="#a4c1c1"
            android:layout_weight="1"
            android:drawableLeft="@drawable/social"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Concerts"
            android:id="@+id/concerts"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:background="#428a86"
            android:layout_weight="1"
            android:drawableLeft="@drawable/concerts"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:id="@+id/sports"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:background="#2d4152"
            android:layout_weight="1"
            android:drawableLeft="@drawable/sports"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Campus Organizations"
            android:id="@+id/campus_orgs"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:background="#a4c1c1"
            android:layout_weight="1"
            android:drawableLeft="@drawable/campus"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Academic"
            android:id="@+id/academic"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:background="#428a86"
            android:layout_weight="1"
            android:drawableLeft="@drawable/academic"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Free"
            android:id="@+id/free"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:background="#2d4152"
            android:layout_weight="1"
            android:drawableLeft="@drawable/free"
            android:paddingLeft="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>
