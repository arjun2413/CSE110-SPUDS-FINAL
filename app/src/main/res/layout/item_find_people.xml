<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/find_user_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:background="#00ffffff"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/find_user_name"
            android:layout_toRightOf="@+id/find_user_image"
            android:layout_toEndOf="@+id/find_user_image"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:textColor="#1a1a1a"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:id="@+id/subscribe_toggle"
            android:background="@drawable/roundedbutton"
            android:layout_alignBottom="@+id/find_user_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#5c8a8a"
            android:layout_alignTop="@+id/find_user_name" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

