<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv"
    >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_see_more"
            android:visibility="invisible"
            android:text="See more..." />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/event_pic"
                android:background="#bfbfbf"
                android:scaleType="centerCrop" />
                <!--android:src="@drawable/wineanddine"-->


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/transparent_overlay"
                    android:background="#80000000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_day"
                    android:text="30"
                    android:layout_centerHorizontal="true"
                    android:textSize="50sp"
                    android:textColor="#ffffff"
                    android:shadowColor="#7F000000"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_month"
                    android:layout_below="@id/date_day"
                    android:text="M A Y"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:shadowColor="#7F000000"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="23dp"
                        android:id="@+id/event_name"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="David Birthday Party"
                        android:textColor="#1a1a1a" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="Hosted by "
                        android:id="@+id/hosted_text"
                        android:textColor="#1a1a1a"
                       />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="18dp"
                        android:text="A.S. Concert and Events"
                        android:id="@+id/event_host"
                        android:textColor="#1a1a1a"
                        android:textStyle="italic"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="260dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/event_name"
                    android:id="@+id/event_loc"
                    android:text="RIMAC Field"
                    android:textColor="#1a1a1a" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_below="@id/event_date"
                        android:id="@+id/event_attendees"
                        android:text="1,049"
                        android:textColor="#1a1a1a" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text=" going"
                        android:id="@+id/going_text"
                        android:textColor="#1a1a1a" />
                </LinearLayout>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/event_attendees"
                    android:id="@+id/event_categories"
                    android:text="Social, Concerts" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="12:00 PM"
            android:id="@+id/event_time"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/label_see_more"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="5dp"
            android:textColor="#1a1a1a" />

        <Button
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:id="@+id/event_going"
            android:background="@drawable/roundedbutton"
            android:layout_gravity="right"
            android:text="GOING"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:backgroundTint="#a6a6a6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
