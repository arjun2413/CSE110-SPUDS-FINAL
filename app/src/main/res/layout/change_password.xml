<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spuds.eventapp.change_password"
    android:background="#FFFFFF">

    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/current_password"
        android:allowUndo="true"
        android:textColorHint="#FFFFFF"
        android:hint="CURRENT PASSWORD"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedbox"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="30dp"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        />

    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/new_password"
        android:hint="NEW PASSWORD"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/current_password"
        android:layout_alignLeft="@+id/current_password"
        android:layout_alignStart="@+id/current_password"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/roundedbox"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="30dp"
        android:paddingLeft="20dp"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirm_password"
        android:hint="CONFIRM PASSWORD"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/new_password"
        android:layout_alignLeft="@+id/new_password"
        android:layout_alignStart="@+id/new_password"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/roundedbox"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="30dp"
        android:paddingLeft="20dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Change Password"
        android:id="@+id/change_password"
        android:layout_below="@+id/confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/system_message"
        android:layout_below="@+id/change_password"
        android:layout_marginTop="62dp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/confirm_password"
        android:layout_alignEnd="@+id/confirm_password"
        android:textColor="#000000"
        android:textSize="25dp" />

</RelativeLayout>
