<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/picture"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="10"
                android:id="@+id/date_day"
                android:textSize="50sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:shadowColor="#7F000000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MAY"
                android:id="@+id/date_month"
                android:layout_below="@id/date_day"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:shadowColor="#7F000000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_marginLeft="10dp"
            android:id="@+id/first_line"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Arjun Shan "
                android:id="@+id/host"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:layout_toStartOf="@+id/action_text"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#1a1a1a"
               />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="commented on:"
                android:id="@+id/action_text"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/host"
                android:layout_toEndOf="@+id/host"
                android:textColor="#1a1a1a"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="omg how is reggie so cool? why can't i be just like him"
            android:id="@+id/comment_description"
            android:layout_below="@+id/first_line"
            android:layout_marginLeft="20dp"
            android:textColor="#1a1a1a"
            android:layout_marginTop="5dp"

            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="12:00 PM"
            android:id="@+id/date_time"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="65dp"
            android:layout_marginRight="5dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_below="@id/comment_description">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="in "
                android:id="@+id/in_text"
                android:layout_alignBottom="@+id/event_name"
                android:layout_alignLeft="@+id/comment_description"
                android:layout_alignStart="@+id/comment_description"
                android:textSize="16sp"
                android:textColor="#1a1a1a" />

            <TextView0
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reggie Wu is so cool OH DAYUUM"
                android:id="@+id/event_name"
                android:textStyle="bold"
android:textSize="16sp"
                android:minLines="1"
                android:maxLines="1"

                android:ellipsize="end"
                android:textColor="#1a1a1a" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
