<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/picture"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="10"
                android:id="@+id/date_day"
                android:textSize="50sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:shadowColor="#7F000000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MAY"
                android:id="@+id/date_month"
                android:layout_below="@id/date_day"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:shadowColor="#7F000000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="commented on:"
            android:id="@+id/action_text"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/host"
            android:layout_toEndOf="@+id/host"
            android:textColor="#1a1a1a"
            android:layout_marginLeft="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Arjun Shan"
            android:id="@+id/host"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_marginLeft="10dp"
            android:textColor="#1a1a1a" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Will there be food?"
            android:id="@+id/comment_description"
            android:layout_below="@+id/action_text"
            android:layout_centerHorizontal="true"
            android:textColor="#1a1a1a"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="12:00 PM"
            android:id="@+id/date_time"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"

            android:layout_below="@id/comment_description">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="in "
                android:id="@+id/in_text"
                android:layout_alignBottom="@+id/event_name"
                android:layout_alignLeft="@+id/comment_description"
                android:layout_alignStart="@+id/comment_description"
                android:textColor="#1a1a1a" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Birthday Party"
                android:id="@+id/event_name"
                android:textStyle="bold"


                android:textColor="#1a1a1a" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
