<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfileFragment"
    android:background="#94b8b8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:background="#e6e6e6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#e6e6e6"
            android:backgroundTint="#e6e6e6">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/user_image"
                android:background="#00ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:background="#e6e6e6"
                android:backgroundTint="#e6e6e6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e6e6e6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="100"
                            android:id="@+id/user_number_following"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Subscribers"
                            android:layout_below="@id/user_number_following"
                            android:id="@+id/label_user_number_following"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="100"
                            android:layout_alignParentRight="true"
                            android:id="@+id/user_number_hosting"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:textColor="#000000"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Hosted Events"
                            android:id="@+id/label_user_number_hosting"
                            android:layout_below="@+id/user_number_hosting"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginRight="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="EDIT YOUR PROFILE"
                    android:textSize="15sp"
                    android:id="@+id/button_subscribe"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/roundedbox"
                    android:backgroundTint="#a6a6a6"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e6e6"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="10dp"
                android:text="Christine Wu"
                android:id="@+id/user_name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="OH DAMN. I'm Reggie and I'm the coolest person alive. And Christine is really cool too. Wu Power."
                android:id="@+id/user_description"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_tabs" />

            <android.support.design.widget.TabLayout
                android:id="@+id/profile_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"/>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>