<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignUp.SignUpActivity">
    <!--android:background="@drawable/blue">-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/signupLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eventory"
        android:id="@+id/signup_header"
        android:layout_below="@+id/signupLogo"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/signup_name"
        android:hint="NAME"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/roundedbox"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/ic_menu_send"
        android:drawablePadding="20dp"
        android:paddingLeft="15dp"
        android:textIsSelectable="false"
        android:textSize="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/signup_email"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email"
        android:layout_alignRight="@+id/signup_email"
        android:layout_alignEnd="@+id/signup_email" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/signup_email"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:hint="EMAIL ADDRESS"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/roundedbox"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/envelope"
        android:drawablePadding="20dp"
        android:paddingLeft="15dp"
        android:textIsSelectable="false"
        android:textSize="10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/signup_password_1"
        android:inputType="textPassword"
        android:layout_below="@+id/signup_email"
        android:layout_marginTop="10dp"
        android:hint="PASSWORD"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/roundedbox"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="30dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email"
        android:layout_alignRight="@+id/signup_email"
        android:layout_alignEnd="@+id/signup_email"
        android:textIsSelectable="false"
        android:textSize="10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/signup_password_2"
        android:inputType="textPassword"
        android:layout_below="@+id/signup_password_1"
        android:layout_marginTop="10dp"
        android:hint="CONFIRM PASSWORD"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/roundedbox"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="30dp"
        android:paddingLeft="20dp"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email"
        android:layout_alignRight="@+id/signup_email"
        android:layout_alignEnd="@+id/signup_email"
        android:textIsSelectable="false"
        android:textSize="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Sign Up"
        android:id="@+id/signup_button"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#031a42"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Passwords must match."
        android:id="@+id/signupPasswordMatchError"
        android:layout_below="@+id/signup_password_2"
        android:layout_alignLeft="@+id/signup_password_2"
        android:layout_alignStart="@+id/signup_password_2"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Must enter valid email."
        android:id="@+id/signupInvalidEmailError"
        android:layout_below="@+id/signup_email"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


</RelativeLayout>
