<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login.LoginActivity"
    android:background="@drawable/blue">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/eventImage" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/eventName"
        android:layout_below="@+id/eventImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Event Name"
        android:textColorHint="#FFFFFF"
        android:background="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/eventDate"
        android:layout_below="@+id/eventName"
        android:layout_centerHorizontal="true"
        android:hint="Date"
        android:textColorHint="#FFFFFF"
        android:background="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/eventLocation"
        android:layout_below="@+id/eventDate"
        android:layout_centerHorizontal="true"
        android:hint="Location"
        android:background="#000000"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/eventDescription"
        android:hint="Description"
        android:textColorHint="#FFFFFF"
        android:background="#000000"
        android:layout_below="@+id/eventLocation"
        android:layout_alignRight="@+id/editEventDone"
        android:layout_alignEnd="@+id/editEventDone" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/editEventDelete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/editEventDone"
        android:layout_alignTop="@+id/editEventDelete"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
